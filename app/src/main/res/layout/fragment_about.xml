<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="10dp"
                android:layout_margin="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="颜色选择器"
                            android:textSize="20sp"
                            android:textColor="#606060"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By camel"
                            android:textSize="16sp"
                            android:textColor="#606060"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="版本号: 1.1.3"
                            android:textSize="16sp"
                            android:textColor="#606060"
                            android:layout_margin="10dp"/>

                    </LinearLayout>

                    <com.example.colors.ico.ParallaxLayerLayout
                        android:id="@+id/ico_parallax"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp">

                        <View
                            android:id="@+id/ico_layer_one"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:layout_parallaxZIndex="3"
                            android:background="@drawable/ic_icon_one"/>

                        <View
                            android:id="@+id/ico_layer_two"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:layout_parallaxZIndex="2"
                            android:background="@drawable/ic_icon_three"/>

                        <View
                            android:id="@+id/ico_layer_three"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:layout_parallaxZIndex="1"
                            android:background="@drawable/ic_icon_two"/>

                    </com.example.colors.ico.ParallaxLayerLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="10dp"
                android:layout_margin="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="感谢"
                        android:textSize="16sp"
                        android:textColor="#606060"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/about_cpv"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ColorPickerView"
                        android:textSize="16sp"
                        android:textColor="#0451A4"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/about_cpp"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ColorPickerPreference"
                        android:textSize="16sp"
                        android:textColor="#0451A4"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/about_op"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Omelette"
                        android:textSize="16sp"
                        android:textColor="#0451A4"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/about_mong"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="manongjc"
                        android:textSize="16sp"
                        android:textColor="#0451A4"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/about_mc"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MPAndroidChart"
                        android:textSize="16sp"
                        android:textColor="#0451A4"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/about_pll"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ParallaxLayerLayout"
                        android:textSize="16sp"
                        android:textColor="#0451A4"
                        android:layout_margin="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>