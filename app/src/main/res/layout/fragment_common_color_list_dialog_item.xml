<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:id="@+id/fm_dialog_color_mian">

    <TextView
        android:id="@+id/fm_dialog_color_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="柠檬黄"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fm_dialog_color_value_r_v"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="R "
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/fm_dialog_color_value_r"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/fm_dialog_color_value_g_v"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="G "
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/fm_dialog_color_value_g"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/fm_dialog_color_value_b_v"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="B "
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/fm_dialog_color_value_b"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/fm_dialog_color_chart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="China Color"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:textSize="11sp"/>

</LinearLayout>