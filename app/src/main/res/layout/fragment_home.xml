<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:id="@+id/fragment_home"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="35dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/one_main_color"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/oen_lineColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/one_main_color"
                android:orientation="horizontal"
                android:layout_marginVertical="40dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/one_item_color_one"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/one_item_value_one"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="11sp"
                        android:background="@drawable/one_item_value_bg"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/one_item_color_two"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/one_item_value_two"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="11sp"
                        android:background="@drawable/one_item_value_bg"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/one_item_color_three"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/one_item_value_three"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="11sp"
                        android:background="@drawable/one_item_value_bg"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/one_item_color_four"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/one_item_value_four"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="11sp"
                        android:background="@drawable/one_item_value_bg"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/one_seekbar_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/oen_lineColor"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:weightSum="11">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/one_color_random"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_randomchange" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right" >

                        <TextView
                            android:id="@+id/one_color_rgb_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/one_item_value_bg"
                            android:gravity="center_vertical"
                            android:textIsSelectable="true"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/one_rgb_copy"
                            android:layout_width="21dp"
                            android:layout_height="23dp"
                            android:background="@drawable/ic_copyone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:weightSum="8"
                    android:layout_marginTop="25dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp">

                        <SeekBar
                            android:id="@+id/one_red_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-18dp"
                            android:layout_marginRight="-18dp"
                            android:duplicateParentState="true"
                            android:splitTrack="false"
                            android:thumb="@drawable/rgb_in_r"
                            android:background="@drawable/rgb_in_r"
                            android:progressDrawable="@drawable/seekbar_progress"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/one_text_red_value"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp">

                        <SeekBar
                            android:id="@+id/one_greed_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-18dp"
                            android:layout_marginRight="-18dp"
                            android:duplicateParentState="true"
                            android:splitTrack="false"
                            android:thumb="@drawable/rgb_in_r"
                            android:background="@drawable/rgb_in_r"
                            android:progressDrawable="@drawable/seekbar_progress"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/one_text_greed_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:weightSum="8"
                    android:layout_marginTop="25dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp">

                        <SeekBar
                            android:id="@+id/one_blue_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-18dp"
                            android:layout_marginRight="-18dp"
                            android:duplicateParentState="true"
                            android:splitTrack="false"
                            android:thumb="@drawable/rgb_in_r"
                            android:background="@drawable/rgb_in_r"
                            android:progressDrawable="@drawable/seekbar_progress"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/one_text_blue_value"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="30dp"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/seva_collect"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/th_color_circle"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_saveone" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>