<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SetFragment"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F8F8F8"
        app:cardCornerRadius="10dp"
        android:layout_margin="6dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择主题颜色"
                android:textSize="20sp"
                android:textColor="#606060"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/set_color_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#00BCD4"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/set_color_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="#FF9800"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/set_color_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="#CDDC39"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/set_color_four"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="#8BC34A"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/set_color_five"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="#9C27B0"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>
                    
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F8F8F8"
        app:cardCornerRadius="10dp"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择语言"
                android:textSize="20sp"
                android:textColor="#606060"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中文"
                android:textSize="16sp"
                android:background="@drawable/one_item_value_bg"
                android:padding="3dp"
                android:textColor="#61775C"
                android:layout_margin="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="16sp"
                android:background="@drawable/one_item_value_bg"
                android:padding="3dp"
                android:textColor="#61775C"
                android:layout_margin="25dp"/>

        </LinearLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>